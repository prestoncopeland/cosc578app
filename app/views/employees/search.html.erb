<h1 class = "container">Search For An Employee</h1>
<div class="row">
        <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4">

<%= form_tag :controller => 'employees', :action => 'search_results', :method => 'get' do %>

      <%= text_field_tag :first, params[:first], :id => 'search_field_1' %>
      <%= text_field_tag :last, params[:last], :id => 'search_field_2' %>
      <%= submit_tag "Search", :class => 'container btn btn-primary', :name => nil %>
  <% end %>


      </div>
      <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4">
      <div class="thumbnail">
        <!-- IMAGE CONTAINER-->
        <img src="http://revolutionarypaideia.files.wordpress.com/2011/02/black-teacher-man.jpg" alt="">
        <div style= "text-align:center;">
        <%= link_to 'List Employees', employees_path, :class => 'container btn btn-primary'%>
        </div>
      </div>

</div>
</div>
<%= form_tag({ :controller => 'resource_searches', :action => 'find_school_by_student'}, :method => 'post', class: "container") do %>
      <h4>Find a student's school</h4>
      <%= label_tag(:nickname, "Enter the student's nickname") %>

      <%= text_field_tag :nickname, params[:nickname] %>
      <br/>
      <%= submit_tag "Search", :class => 'container btn btn-primary' %>

  <% end %>
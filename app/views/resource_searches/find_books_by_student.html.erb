<div class = "container">
<h1>Listing Books</h1>

<table>
  <thead>
    <tr>
      <th>Book name</th>
      <th>Student</th>
      <th>Receipt number</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.book_name %></td>
        <td><%= book.student.nickname %></td>
        <td><%= book.receipt_number %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path, class: "btn btn-primary" %>
<br><br>
<p><%= link_to 'More Resource Queries', resource_searches_path, class: "btn btn-primary" %>
        </p>

</div>

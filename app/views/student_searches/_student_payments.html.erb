<%= form_tag({ :controller => 'student_searches', :action => 'student_payments'}, :method => 'post', class: "container") do %>
      <h4>List payments made by a student</h4>
      <%= label_tag(:nickname, "Enter student's nickname") %>

      <%= text_field_tag :nickname, params[:nickname], :id => 'search_field_1' %>
      <br/>
      <%= submit_tag "Search", :class => 'container btn btn-primary', :name => nil %>

  <% end %>
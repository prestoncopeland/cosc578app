<h1>Listing sessions</h1>

<table>
  <thead>
    <tr>
      <th>Hours</th>
      <th>Date</th>
      <th>Type</th>
      <th>Student</th>
      <th>Tutor</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @sessions.each do |session| %>
      <tr>
        <td><%= session.hours %></td>
        <td><%= session.date %></td>
        <td><%= session.type %></td>
        <td><%= session.student %></td>
        <td><%= session.tutor %></td>
        <td><%= link_to 'Show', session %></td>
        <td><%= link_to 'Edit', edit_session_path(session) %></td>
        <td><%= link_to 'Destroy', session, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<h1>Students</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Nickname</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Birthdate</th>
      <th>Grade</th>
      <th>Street</th>
      <th>City</th>
      <th>Zip</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Is active?</th>
      <th>Hours remaining?</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.id %></td>
        <td><%= student.nickname %></td>
        <td><%= student.first_name %></td>
        <td><%= student.last_name %></td>
        <td><%= student.birthdate %></td>
        <td><%= student.grade %></td>
        <td><%= student.street %></td>
        <td><%= student.city %></td>
        <td><%= student.zip %></td>
        <td><%= student.email %></td>
        <td><%= student.phone %></td>
        <td><%= student.is_active %></td>
        <td><%= student.hours_remaining? %></td>
        <td><%= link_to 'Show', student %></td>
        <td><%= link_to 'Edit', edit_student_path(student) %></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add A New Student', new_student_path, class: "btn btn-primary" %>

<br> <br>

<p><%= link_to 'More Student Queries', student_searches_path, class: "btn btn-primary" %>
        </p>
